# PostgreSQL Database Configuration
# Database name for PostgreSQL container
POSTGRES_DB=glisk
# Database user for PostgreSQL container
POSTGRES_USER=glisk
# Database password - MUST change for production deployment
POSTGRES_PASSWORD=changeme_in_production

# Application Database Configuration
# SQLAlchemy async connection URL (format: postgresql+psycopg://user:pass@host:port/db)
DATABASE_URL=postgresql+psycopg://glisk:changeme_in_production@postgres:5432/glisk
# Connection pool size (200 recommended for high concurrency)
DB_POOL_SIZE=200

# Application Environment
# Environment mode: development (console logs) | production (JSON logs)
APP_ENV=development
# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# CORS Configuration
# Allowed origins for CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000

# Server Configuration
# Host to bind server (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0
# Port for API server
PORT=8000

# Alchemy Integration (003-003b-event-detection)
# Get API key from: https://dashboard.alchemy.com
ALCHEMY_API_KEY=your_alchemy_api_key_here
# Get webhook signing key from: Alchemy Dashboard > Webhooks > Your Webhook > View Signing Key
ALCHEMY_WEBHOOK_SECRET=your_webhook_signing_key_here
# Deployed GliskNFT contract address (checksummed)
GLISK_NFT_CONTRACT_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb0
# Network selection: BASE_SEPOLIA | BASE_MAINNET
NETWORK=BASE_SEPOLIA
# Default author wallet address for unregistered authors (checksummed)
GLISK_DEFAULT_AUTHOR_WALLET=0x0000000000000000000000000000000000000001

# Replicate Image Generation (003-003c-image-generation)
# Get API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here
# Model version for image generation (default: flux-schnell for fast generation)
REPLICATE_MODEL_VERSION=black-forest-labs/flux-schnell
# Fallback prompt for censored content (SFW alternative with censorship notice)
FALLBACK_CENSORED_PROMPT=Cute kittens and flowers in a peaceful garden, with text overlay saying 'Original prompt was censored by AI service'

# IPFS Upload - Pinata Service (003-003d-ipfs-reveal)
# Get JWT token from: https://app.pinata.cloud/developers/api-keys
# Required permissions: pinFileToIPFS, pinJSONToIPFS
PINATA_JWT=your_pinata_jwt_token_here
# Pinata gateway domain for IPFS content access (default: public gateway)
PINATA_GATEWAY=gateway.pinata.cloud

# Blockchain Keeper - Batch Reveal (003-003d-ipfs-reveal)
# Private key for keeper wallet (0x-prefixed hex, 64 characters)
# Generate with: cast wallet new (from Foundry) or any Ethereum wallet
# IMPORTANT: Fund this wallet with ETH for gas on your target network
KEEPER_PRIVATE_KEY=0xYOUR_KEEPER_PRIVATE_KEY_HERE_64_HEX_CHARS
# Gas estimation strategy: fast | medium | slow (affects transaction speed)
KEEPER_GAS_STRATEGY=medium
# Gas buffer multiplier for safety (1.2 = 20% buffer, prevents underestimation failures)
REVEAL_GAS_BUFFER=1.2
# Transaction confirmation timeout in seconds (max wait time for receipt)
TRANSACTION_TIMEOUT_SECONDS=180

# Worker Configuration (003-003c, 003-003d)
# Polling interval for all workers in seconds (balance between responsiveness and CPU usage)
POLL_INTERVAL_SECONDS=1
# Batch size for image generation and IPFS upload workers (tokens per poll)
WORKER_BATCH_SIZE=10
# Batch accumulation wait time for reveal worker in seconds (wait for more tokens)
BATCH_REVEAL_WAIT_SECONDS=5
# Maximum tokens per reveal batch (gas-efficient batch size, 1-50 recommended)
BATCH_REVEAL_MAX_TOKENS=50
