# Network Configuration
# Network selection: BASE_SEPOLIA | BASE_MAINNET
VITE_NETWORK=BASE_MAINNET

# GliskNFT Contract Configuration
# Must correspond to selected VITE_NETWORK
VITE_CONTRACT_ADDRESS=0xb43185E67D4Fb27115AC419C9F8A335cC0B837B9

# Backend API Configuration
# Used for dev server proxy target (npm run dev only)
# Examples:
#   VITE_API_BASE_URL=http://localhost:8000  (local backend)
#   VITE_API_BASE_URL=https://testnet.glisk.xyz  (remote backend)
VITE_API_BASE_URL=http://localhost:8000

# WalletConnect Configuration (get your project ID from https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# OnchainKit API Configuration (required for NFT metadata fetching)
VITE_ONCHAINKIT_API_KEY=your_coinbase_developer_platform_api_key_here

# Pinata IPFS Gateway Configuration (for NFT metadata and images)
VITE_PINATA_GATEWAY=turquoise-wooden-bear-638.mypinata.cloud
VITE_PINATA_GATEWAY_TOKEN=your_pinata_gateway_token_here
