# Network Configuration
# Network selection: BASE_SEPOLIA | BASE_MAINNET
NEXT_PUBLIC_NETWORK=BASE_MAINNET

# GliskNFT Contract Configuration
# Must correspond to selected NEXT_PUBLIC_NETWORK
NEXT_PUBLIC_CONTRACT_ADDRESS=0xb43185E67D4Fb27115AC419C9F8A335cC0B837B9

# Backend API Configuration
# Used for Next.js API proxy (rewrites in next.config.ts)
# Examples:
#   NEXT_PUBLIC_BACKEND_URL=http://localhost:8000  (local backend)
#   NEXT_PUBLIC_BACKEND_URL=https://glisk.xyz  (remote backend)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# WalletConnect Configuration (get your project ID from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# OnchainKit API Configuration (required for NFT metadata fetching)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_coinbase_developer_platform_api_key_here

# Pinata IPFS Gateway Configuration (for NFT metadata and images)
NEXT_PUBLIC_PINATA_GATEWAY=turquoise-wooden-bear-638.mypinata.cloud
NEXT_PUBLIC_PINATA_GATEWAY_TOKEN=your_pinata_gateway_token_here
